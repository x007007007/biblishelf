#!/usr/bin/env python
import sys
from isort.hooks import git_hook as isort_git_hook
from flake8.main import git


if __name__ == '__main__':
    print(isort_git_hook(strict=True))
    sys.exit(
        git.hook(
            strict=git.config_for('strict'),
            lazy=git.config_for('lazy'),
        )
    )
